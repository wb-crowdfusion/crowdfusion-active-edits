<?xml version="1.0" encoding="UTF-8"?>
<aspect
    xmlns="http://www.crowdfusion.com/schema/aspect"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.crowdfusion.com/schema/aspect http://www.crowdfusion.com/schema/crowdfusion-aspect-2.0.xsd">
    <info>
        <name>Primary: Crowd Fusion Active Edits</name>
        <description>This aspect defines an Active Edit. An Active Edit links a member to a record for purposes of tracking concurrent edits on that record.</description>
        <elementmode>one</elementmode>
    </info>
    <meta_defs>
        <meta id="#form-changed">
            <title>Form Changed</title>
            <validation datatype="boolean"/>
            <default>false</default>
        </meta>
    </meta_defs>
    <tag_defs>
        <tag fieldlike="true" quickadd="false" multiple="false" direction="out">
            <title>Active Edit Member</title>
            <partial aspect="@members" role="#active-edit-member" />
        </tag>
        <tag fieldlike="true" quickadd="false" multiple="false" direction="out">
            <title>Active Edit Record</title>
            <partial aspect="@mixin-track-active-edits" role="#active-edit-record" />
        </tag>
    </tag_defs>
</aspect>